<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name, "Artist's name" %>
  <%= f.text_field :artist_name %> 
  <br /> 
  <%= f.label :genre_id, "Select Genre" %>
  <%= f.collection_select :genre_id, Genre.all, "id", "name" %>
  <br />

  <%= f.fields_for :notes do |ff| %>
    <%= ff.text_area :content %>
    <br/>
  <% end %>

<br />
  <%= f.submit %>
<% end %>

 


